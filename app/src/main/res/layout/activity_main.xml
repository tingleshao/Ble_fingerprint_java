<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chongshao_mikasa.ble_fingerprint_java.MainActivity">

    <TextView
        android:text="TextView"
        android:id="@+id/beacon0"
        android:layout_width="150dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="525dp"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="525dp"
        android:id="@+id/beacon1"
        android:layout_height="5dp"
        android:textSize="5sp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon1"
        android:layout_alignStart="@+id/beacon1"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon2"
        android:layout_height="5dp"
        android:textSize="5sp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon2"
        android:layout_alignStart="@+id/beacon2"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon3"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon3"
        android:layout_alignStart="@+id/beacon3"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon4"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon4"
        android:layout_alignStart="@+id/beacon4"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon5"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon5"
        android:layout_alignStart="@+id/beacon5"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon6"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_below="@+id/beacon6"
        android:layout_alignStart="@+id/beacon6"
        android:layout_marginTop="0dp"
        android:id="@+id/beacon7"
        android:textSize="5sp"
        android:layout_height="5dp" />

    <com.example.chongshao_mikasa.ble_fingerprint_java.MySurfaceView
        android:id="@+id/gl_layout"
        android:orientation="horizontal"
        android:layout_marginLeft="250dp"
        android:layout_width="125dp"
        android:layout_height="125dp" />


    <FrameLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="250dp" />

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/rotationMsg"
        android:layout_marginLeft="450dp"
        android:textSize="5sp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gl_layout"
        android:id="@+id/button" />

    <FrameLayout
        android:id="@+id/mainLayout2"
        android:orientation="vertical"
        android:layout_marginLeft="480dp"
        android:layout_height="125dp"
        android:layout_width="125dp"
        android:layout_marginTop="125dp" />

    <Button
        android:text="xup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_layout"
        android:layout_toEndOf="@+id/mainLayout"
        android:id="@+id/button2" />

    <Button
        android:text="xdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_layout"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="45dp"
        android:id="@+id/button4" />

    <Button
        android:text="yup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button2"
        android:id="@+id/button5" />

    <Button
        android:text="ydown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:id="@+id/button6" />

    <Button
        android:text="zup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignEnd="@+id/button6"
        android:id="@+id/button7" />

    <Button
        android:text="zdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button5"
        android:id="@+id/button8" />

    <Button
        android:text="r1up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:id="@+id/button9" />

    <Button
        android:text="r2up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:id="@+id/button10" />

    <Button
        android:text="r3up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button8"
        android:id="@+id/button11" />

    <Button
        android:text="r1down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:id="@+id/button12" />

    <Button
        android:text="r2down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:id="@+id/button13" />

    <Button
        android:text="r3down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button10"
        android:id="@+id/button14" />

    <Button
        android:text="record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button9"
        android:layout_toEndOf="@+id/gl_layout"
        android:id="@+id/record" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/beacon5"
        android:layout_toEndOf="@+id/gl_layout"
        android:id="@+id/editText"
        android:layout_width="70dp" />

</RelativeLayout>
